<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movStoreModel"
            type="com.rubio.movstore.data.models.Movie" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgItemMovie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_weight="1.5"
                    showImgUrl="@{movStoreModel.posterPath}"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/divider"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtTitleMovie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{movStoreModel.originalTitle}"
                        android:textSize="20sp"
                        tools:text="La mujer maravilla"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtDescriptionMovie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{movStoreModel.overview}"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:textColor="@color/secondary_text"
                        android:maxLines="3"
                        tools:text="Producida en el aÃ±o 1998"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>